---
interface Props {
  title: string;
  excerpt: string;
  date: string;
  author: string;
  image: string;
  slug: string;
}

const { title, excerpt, date, author, image, slug } = Astro.props;
---

<article class="featured-post">
  <div class="content">
    <div class="metadata">
      <span class="date">{date}</span>
      <span class="author">by {author}</span>
    </div>
    <h2>{title}</h2>
    <p>{excerpt}</p>
    <a href={`/blog/${slug}`} class="read-more">Read Full Article â†’</a>
  </div>
  <div class="image-container">
    <img src={image} alt={title} />
  </div>
</article>

<style>
  .featured-post {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 2rem;
    background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
    border-radius: 1rem;
    overflow: hidden;
    margin-bottom: 3rem;
  }

  .content {
    padding: 3rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .metadata {
    display: flex;
    gap: 1rem;
    font-size: 0.9rem;
    color: rgb(var(--accent-light));
    margin-bottom: 1rem;
  }

  h2 {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    line-height: 1.2;
    color: white;
  }

  p {
    color: #e5e7eb;
    margin-bottom: 2rem;
    line-height: 1.6;
    font-size: 1.1rem;
  }

  .read-more {
    display: inline-block;
    background: rgb(var(--accent));
    color: white;
    padding: 0.8rem 1.5rem;
    border-radius: 2rem;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    align-self: flex-start;
  }

  .read-more:hover {
    background: rgb(var(--accent-light));
    transform: translateY(-2px);
  }

  .image-container {
    height: 100%;
    min-height: 400px;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media (max-width: 768px) {
    .featured-post {
      grid-template-columns: 1fr;
    }

    .content {
      padding: 2rem;
    }

    .image-container {
      min-height: 300px;
      order: -1;
    }

    h2 {
      font-size: 2rem;
    }
  }
</style>